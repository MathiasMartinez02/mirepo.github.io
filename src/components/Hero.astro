---
const personalImageAlt = "Mathi";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import DownloadIcon from "../components/icons/Download.astro";
---

<div class="max-w-xl">
  <div class="overflow-hidden flex gap-4 mb-4">
    <img
      class="overflow-hidden rounded-full shadow-lg size-28"
      src="/mirepo.github.io/projects/image2.webp"
      alt={personalImageAlt}
      style="object-fit: cover"
    />
    <a
      href="https://www.linkedin.com/in/mathias-martínez-13809124a/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy Mathi
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong>Estudiante de Ingenieria en Sistemas y Desarrollaror</strong> de Cordoba,
    Argentina -Ar. Especializado en el desarrollo FullStack
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="https://wa.me/3512014013">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/mathias-martínez-13809124a/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill
      href="https://www.linkedin.com/in/mathias-martínez/details/featured/1709235780999/single-media-viewer/?profileId=ACoAAD2XgHwB-oWSFeg_sH8gpJ_iZamdaQJeqcw"
    >
      <DownloadIcon class="size-4 text-white" />
      Curriculum
    </SocialPill>
  </nav>
</div>
